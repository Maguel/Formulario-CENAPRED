---
// src/components/CroquisInmueble.astro
// “CROQUIS DEL INMUEBLE” – sólo presentación.
// Mantiene el mismo estilo visual de los componentes previos.
---

<section class="panel">
  <header class="panel__header">
    <h2>CROQUIS DEL INMUEBLE</h2>

    <div class="plans">
      <span class="lbl">Existen planos:</span>
      <label class="chk inl"
        ><input type="checkbox" /> <span>Arquitectónico</span></label
      >
      <label class="chk inl"
        ><input type="checkbox" /> <span>Estructural</span></label
      >
      <label class="chk inl"
        ><input type="checkbox" /> <span>Ninguno</span></label
      >
    </div>
  </header>

  <!-- Área de croquis (papel milimetrado) -->
  <div class="sketch-wrap">
    <div class="north">
      <span class="note">(Marcar el Norte)</span>
      <div class="arrow">
        <span class="shaft"></span>
        <span class="head"></span>
      </div>
      <span class="n">N</span>
    </div>

    <div class="sketch" aria-label="Área para dibujar el croquis"></div>
  </div>
</section>

<style>
  /* ===== Contenedor ===== */
  .panel {
    width: min(1060px, 100vw);
    margin: 14px auto;
    border: 2px solid #00b7c7;
    background: #fff;
    font-family: Arial, Helvetica, sans-serif;
    color: #111;
    font-size: 13.5px;
  }

  .panel__header {
    background: #00b7c7;
    color: #fff;
    padding: 0.55rem 0.9rem;
    border-bottom: 2px solid #0aa;
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: end;
    gap: 0.75rem;
  }
  .panel__header h2 {
    margin: 0;
    font-size: 15.5px;
    font-weight: 800;
    letter-spacing: 0.2px;
  }

  .plans {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }
  .lbl {
    font-weight: 700;
  }
  .chk {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }
  .chk input[type="checkbox"] {
    appearance: none;
    width: 14px;
    height: 14px;
    border: 1.8px solid #0f0f0f;
    background: #fff;
    display: inline-grid;
    place-items: center;
    cursor: pointer;
  }
  .chk input[type="checkbox"]:checked {
    background: #00b7c7;
    box-shadow: inset 0 0 0 2px #fff;
  }
  .chk.inl {
    gap: 0.35rem;
  }

  /* ===== Área de croquis ===== */
  .sketch-wrap {
    position: relative;
    padding: 10px 10px 12px;
    border-top: 2px solid #00b7c7;
  }

  /* Papel cuadriculado (línea gruesa cada 5 celdas) */
  .sketch {
    height: clamp(360px, 48vw, 520px);
    border: 2px solid #00b7c7;
    background:
      /* cada 5 líneas más fuerte */
      linear-gradient(#8ddbe3 2px, transparent 2px) top left / 100%
        calc(20px * 5),
      linear-gradient(90deg, #8ddbe3 2px, transparent 2px) top left /
        calc(20px * 5) 100%,
      /* grid fino */
        repeating-linear-gradient(#cfeff3 0 1px, transparent 1px 20px),
      repeating-linear-gradient(90deg, #cfeff3 0 1px, transparent 1px 20px);
    background-repeat: repeat, repeat, repeat, repeat;
    box-shadow: inset 0 0 0 2px #69cfd9;
  }

  /* Indicador de Norte en la esquina superior derecha */
  .north {
    position: absolute;
    top: 10px;
    right: 14px;
    display: grid;
    justify-items: center;
    gap: 0.15rem;
    color: #0a0a0a;
  }
  .north .note {
    font-size: 12px;
    color: #335e64;
  }
  .north .n {
    font-weight: 800;
    font-size: 14px;
    margin-top: -2px;
  }
  .arrow {
    position: relative;
    width: 0;
    height: 48px;
    display: grid;
    place-items: center;
  }
  .shaft {
    width: 2px;
    height: 46px;
    background: #0f0f0f;
    display: block;
  }
  .head {
    position: absolute;
    top: -2px;
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 10px solid #0f0f0f;
  }

  /* ===== Responsivo ===== */
  @media (max-width: 760px) {
    .panel__header {
      grid-template-columns: 1fr;
    }
    .plans {
      justify-content: flex-start;
    }
    .north .note {
      font-size: 11.5px;
    }
  }
  @media (max-width: 420px) {
    .sketch {
      height: 320px;
    }
    .north {
      right: 10px;
    }
  }
</style>
